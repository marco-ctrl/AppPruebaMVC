@model IEnumerable<AppPruebaMVC.Data.Models.Medicamento>

@{
    ViewData["Title"] = "Lista de Medicamentos";
}

<link rel="stylesheet" href="~/css/materialTable.css" asp-append-version="true" />

<div class="container">
    <p>
    <a asp-action="Create" class="btn-floating btn-large waves-effect waves-light blue tooltipped" data-position="bottom" data-tooltip="Agregar Medicamento"><i class="fa-solid fa-plus fa-3x"></i></a>
</p>
<table class="responsive-table striped" id="myTable">
    <thead>
        <tr>
            <th>
                Medicamento
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Estado
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            @if (item.Estado)
            {
                <td class="green-text" id="@item.Codigo">
                   Activo    
                </td>
                <td>
                    <a id="edit_@item.Codigo" asp-action="Edit" asp-route-id="@item.Codigo" class="btn grey tooltipped" data-position="bottom" data-tooltip="Editar Medicamento"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a id="baja_@item.Codigo" onclick="DarBajaMedicamento('Medicamento', '@item.NombreMedicamento', '@item.Codigo')" class="btn red tooltipped" data-position="bottom" data-tooltip="Dar de Baja Medicamento">
                        <i class="fa-solid fa-trash"></i>
                        @* 
                        *@
                        
                    </a>
                
                </td>
            }
            else
            {
                 <td class="red-text" id="@item.Codigo">
                   inActivo
                </td>
                <td>
                <a disabled class="btn grey tooltipped" data-position="bottom" data-tooltip="Editar Persona"><i class="fa-solid fa-pen-to-square"></i></a>
                <a disabled class="btn red tooltipped" data-position="bottom" data-tooltip="Dar de Baja Persona"><i class="fa-solid fa-trash"></i></a>
            </td>
            }
        </tr>
}
    </tbody>
</table>

</div>

<div id="modalEliminarMedicamento" class="modal">
    <div class="modal-content">
      <h4 id="modalTitle">Modal Header</h4>
      <p id="modalMensaje">A bunch of text</p>
    </div>
    <div id="BajaBody"></div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
      <a id="cmdEliminar" href="#!" class="modal-close waves-effect waves-green btn red">Dar Baja</a>
    </div>
  </div>

 @section Scripts{
    <script>

            
            let idEliminar;
        
            document.getElementById('cmdEliminar').addEventListener('click', () => {
            
                ConfirmarBaja();
            });
        
            var DarBajaMedicamento = function(entity, element, id) {
                console.log("hola");
                let uri = `Medicamentoes/Baja/${id}`;
                event.stopPropagation();
                document.getElementById('modalTitle').innerHTML = `Dar Baja ${entity}`;
                document.getElementById('modalMensaje').innerHTML = `¿Seguro desea dar de Baja este Medicamento? ${element}`;
            
                $("#BajaBody").load(uri, function(){
                    $("#modalEliminarMedicamento").modal('open');
                    M.updateTextFields();
                });
            
             }

            var ConfirmarBaja = function() {
                console.log("Dando de baja" + idEliminar);
                var formValues = $('#formBajaMedicamento').serialize();
                id = "";
                $.ajax({
                    type: 'POST',
                    url: 'Medicamentoes/DarBaja',
                    data: formValues
                })
                .done(function(data) {
                    console.log(data.codigo);
                    var toastHTML = '<span>Medicamento dado baja Correctamente</span><button class="btn-flat toast-action"><i class="fa-solid fa-check"></i></button>';
                    M.toast({html: toastHTML});
                    document.getElementById(`${data.codigo}`).innerHTML='inActivo';
                    document.getElementById(`${data.codigo}`).classList.replace('green-text', 'red-text');
                    $(`#baja_${data.codigo}`).attr('disabled', true);
                    $(`#edit_${data.codigo}`).attr('disabled', true);
                })
                .fail(function() {
                    var toastHTML = '<span>Error al dar de Baja Medicamento</span><button class="btn-flat toast-action"><i class="fa-solid fa-xmark"></i></button>';
                    M.toast({html: toastHTML});
                });
            }

        //});

         $(document).ready(function() {
            var myTable = $('#myTable').DataTable({
                language: { url: '/lib/es-ES.json' }
            })
        });
    </script>
}