@model AppPruebaMVC.Data.Models.TipoUsuario

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Tipo de Usuario</h1>

    <h4>Editar Usuario</h4>
    <div class="row">
        <div class="col s8">
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="red-text"></div>
                <div class="input-field col s12">
                    <label asp-for="Cargo"></label>
                    <input asp-for="Cargo" class="validate" />
                    <span asp-validation-for="Cargo" class="red-text"></span>
                </div>
                <input type="hidden" asp-for="Codigo" />
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn blue" />
                    <a class="btn red" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
