@model AppPruebaMVC.Data.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppPruebaMVC</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
     <link rel="stylesheet" href="~/AppPruebaMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
    <div class="row">
  <div class="col s8">
    <div class="card">

      <div class="card-action teal lighten-1 white-text">
        <h3>Ingresar al Sistema</h3>
      </div>

      <div class="card-content">
        <form asp-controller="Login" asp-action="Index" method="post">
              <div class="input-field">
         <label asp-for="Correo"></label>
                <input asp-for="Correo" class="validate"/>
                <span asp-validation-for="Correo" class="red-text"></span>
        </div><br>

        <div class="input-field">
         <label asp-for="Contrasena"></label>
                <input type="password" asp-for="Contrasena" class="validate"/>
                <span asp-validation-for="Contrasena" class="red-text"></span>
        </div><br>
        <div class="form-field">
          <button type="submit" id="btn_enviar" class="btn-large waves-effect waves-dark" value="Acceso" style="width:100%;">Ingresar</button>
        </div><br>
          </form>
      </div>
    </div>
  </div>
</div>

</div>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
       $(document).ready(function(){
     M.AutoInit();
  });
console.log("hola mundo");
    </script>
   
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>
</html>
