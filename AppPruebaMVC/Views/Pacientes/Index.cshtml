@model IEnumerable<AppPruebaMVC.Data.Models.Paciente>

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<link rel="stylesheet" href="~/css/materialTable.css" asp-append-version="true" />

<div class="container">
    <p>
    <a asp-action="Create" class="btn-floating btn-large waves-effect waves-light blue tooltipped" data-position="bottom" data-tooltip="Agregar Paciente"><i class="fa-solid fa-plus fa-3x"></i></a>
</p>
<table class="responsive-table striped" id="myTable">
    <thead>
        <tr>
            
            <th>
                Cedula
            </th>
            <th>
                Nombre Completo
            </th>
            <th>
                Persona Acargo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alergia)
            </th>
            <th>
                Estado
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.CodigoNavigation.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoNavigation.Nombre)
                @Html.DisplayFor(modelItem => item.CodigoNavigation.ApellidoPaterno)
                @Html.DisplayFor(modelItem => item.CodigoNavigation.ApellidoMaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonaEncargada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alergia)
            </td>
                    @if (item.CodigoNavigation.Estado)
                    {
                        <td class="green-text" id="@item.Codigo">
                          Activo    
                        </td>
                        <td>
                          <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn grey tooltipped" data-position="bottom" data-tooltip="Editar Usuario"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    }
                    else
                    {
                        <td class="red-text" id="@item.Codigo">
                          inActivo    
                        </td>
                        <td>
                          <a disabled class="btn grey tooltipped" data-position="bottom" data-tooltip="Editar Usuario"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    }
                    @*<td>
                @Html.DisplayFor(modelItem => item.CodigoNavigation.Estado)
            </td>*@
            
        </tr>
}
    </tbody>
</table>

</div>

@section scripts{
    <script>
        $(document).ready(function() {
            var myTable = $('#myTable').DataTable({
                language: { url: '/lib/es-ES.json' }
            })
        });
    </script>
}